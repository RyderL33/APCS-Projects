//A few assumptions.......

//Words will be separated by spaces. 
//There can be punctuation in a word, we will only add/keep punctuation at the end of a string if it is at the end of a string.
//    for examples: Hello.==> Ellohay.    Good-bye! ==> Ood-byegay!    so... ==> osay...

public class Book
{
  public String pigLatin(String word)
  {
    String newWord = "";
    String digits = "0123456789";
    String vowels = "aeoiouy";
      
    if(word.length() == 0)
    {
      return word;
    }
    else if (digits.indexOf(word.substring(0,1)) >= 0)
    {
      return word;
    }
    else if (vowels.indexOf(word.substring(0, 1)) >= 0)
    {
      return word + "yay";
    }
    else if(word.length() == 1)
    {
      return word + "ay";
    }

    for (int i = 0; i < word.length(); i++)
    {
      if(vowels.indexOf(word.substring(i, i+1)) >= 0) //finds the first vowel 
      {
          String left = word.substring(0, i);//makes a consonant (cluster) of everything before 1st vowel
          String right = word.substring(i);//rest of the word starting from the 1st vowel
          return right + left + "ay";
      }
    }

    return newWord;



  }
  
  public int endPunctuation(String word)  // . If it is all punctuation return 0, if there is no punctuation return -1
  {
    int index = 0;
    int count = 0;

    for (int i = 0; i<word.length()-1; i++) //for the length of the string
    {
      String single = word.substring(i,i+1);
      char check = single.charAt(0);
      char checkIndex = word.charAt(i);
      int asciiValue = (int) check;
        if ((asciiValue >= 33 && asciiValue <= 47) || (asciiValue >= 58 && asciiValue <= 64)) //count number of times a punctuation mark appears
      {
        count++;
      }
        if (!Character.isLetterOrDigit(checkIndex) && !Character.isWhitespace(checkIndex))
        {
          index = i;
        }
    }
    if (count == word.length()) //if number of times punctuation appears equals to word length return 0
      {
        return 0;
      }
    else if (count == 0) //if no punctuation at all, return -1
    {
      return -1;
    }
    else
    {
      return index;
    }
  }

  public String translateWord(String word)    //to share with class
  {
    for (int i = 0; i<word.length()-1; i++)
    {
      String single = word.substring(i,i+1);
      char check = single.charAt(0);
      int asciiValue = (int) check;
      int indexPunct = 0;
      int indexCap = 0;
      if ((asciiValue >= 33 && asciiValue <= 47) || (asciiValue >= 58 && asciiValue <= 64)) //check for punctuation
      {
        indexPunct = i;
      }
      if (asciiValue >=65 && asciiValue <= 90) //check for captial letter
      {
        indexCap = i;
      }

      String convertedWord = new String();
    }
    //take apart string, rearrange, then put back together
    

     

    return convertedWord;
  }

  public String translateSentence(String sentence)
  {
    String retSentence = "";


    return retSentence;
  }
}  
